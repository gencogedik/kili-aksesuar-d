{
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x",
      "memory": 256
    },
    "api/**/*.js": {
      "runtime": "nodejs20.x",
      "memory": 256
    },
    "api/**/*.cjs": {
      "runtime": "nodejs20.x",
      "memory": 256
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "outputDirectory": "dist"
}
